SET (OpenSpaceToolkitPhysics_ROOT_DIR ${OpenSpaceToolkitPhysics_ROOT_DIR} @CMAKE_INSTALL_PREFIX@)

FIND_PATH (
    OpenSpaceToolkitPhysics_INCLUDE_DIR
    NAMES
        "OpenSpaceToolkit/Physics/Unit.hpp"
    PATHS
        ${OpenSpaceToolkitPhysics_ROOT_DIR}
    PATH_SUFFIXES
        "include"
    NO_DEFAULT_PATH
)

IF (WIN32)

    FIND_LIBRARY (
        OpenSpaceToolkitPhysics_LIBRARY
        NAMES
            "open-space-toolkit-physics"
            "libopen-space-toolkit-physics"
        PATHS
            ${OpenSpaceToolkitPhysics_ROOT_DIR}
        PATH_SUFFIXES
            "lib"
        NO_DEFAULT_PATH
    )

    FIND_FILE (
        OpenSpaceToolkitPhysics_RUNTIME_LIBRARY
        NAMES
            "open-space-toolkit-physics.dll"
        PATHS
            ${OpenSpaceToolkitPhysics_ROOT_DIR}
        PATH_SUFFIXES
            "bin"
            "lib"
        NO_DEFAULT_PATH
    )

ELSE ()

    FIND_LIBRARY (
        OpenSpaceToolkitPhysics_LIBRARY
        NAMES
            "libopen-space-toolkit-physics.so"
            "open-space-toolkit-physics"
        PATHS
            ${OpenSpaceToolkitPhysics_ROOT_DIR}
        PATH_SUFFIXES
            "lib"
        NO_DEFAULT_PATH
    )

ENDIF ()

# MESSAGE (STATUS "OpenSpaceToolkitPhysics_ROOT_DIR = ${OpenSpaceToolkitPhysics_ROOT_DIR}")
# MESSAGE (STATUS "OpenSpaceToolkitPhysics_INCLUDE_DIR = ${OpenSpaceToolkitPhysics_INCLUDE_DIR}")
# MESSAGE (STATUS "OpenSpaceToolkitPhysics_LIBRARY = ${OpenSpaceToolkitPhysics_LIBRARY}")
# MESSAGE (STATUS "OpenSpaceToolkitPhysics_FIND_VERSION = ${OpenSpaceToolkitPhysics_FIND_VERSION}")

IF (OpenSpaceToolkitPhysics_INCLUDE_DIR)

    IF (EXISTS "${OpenSpaceToolkitPhysics_INCLUDE_DIR}/OpenSpaceToolkit/Physics/Unit.hpp")
        SET (
            OpenSpaceToolkitPhysics_INCLUDE_DIRS
            ${OpenSpaceToolkitPhysics_INCLUDE_DIR}
            ${OpenSpaceToolkitPhysics_INCLUDE_DIR}/OpenSpaceToolkit/Physics
        )
    ELSE ()
        SET (OpenSpaceToolkitPhysics_INCLUDE_DIRS ${OpenSpaceToolkitPhysics_INCLUDE_DIR})
    ENDIF ()

    SET (OpenSpaceToolkitPhysics_LIBRARIES ${OpenSpaceToolkitPhysics_LIBRARY})
    IF (WIN32 AND OpenSpaceToolkitPhysics_RUNTIME_LIBRARY)
        SET (OpenSpaceToolkitPhysics_RUNTIME_LIBRARIES ${OpenSpaceToolkitPhysics_RUNTIME_LIBRARY})
    ENDIF ()

    SET (OpenSpaceToolkitPhysics_FOUND TRUE)

ENDIF ()
